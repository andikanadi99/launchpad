rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // User avatars - public read, owner write
    match /avatars/{uid}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == uid;
    }
    
    // Product images and files - authenticated read, owner write
    match /products/{userId}/{productId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // User uploads (for product delivery files) - owner only
    match /user-uploads/{userId}/{allPaths=**} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Public product previews - public read
    match /public/{allPaths=**} {
      allow read: if true;
      allow write: if false; // Admin only through Firebase Console
    }
    
    // Delivery content (purchased products) - purchaser access
    match /delivery/{productId}/{allPaths=**} {
      allow read: if request.auth != null; // You might want to add purchase verification here
      allow write: if false; // Only through Cloud Functions
    }
  }
}